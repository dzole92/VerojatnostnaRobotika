        <Label x:Name="label_Copy2" Content="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="588,80,0,0"/>
        <TextBox x:Name="txtDiagonalCost" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="14" VerticalAlignment="Top" Width="52" Margin="647,104,0,0"/>
        <Label x:Name="label_Copy3" Content="Diagonal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="642,78,0,0"/>
        <Grid x:Name="nodeGrid" HorizontalAlignment="Left" Width="506" Margin="0,0,0,10"/>

    </Grid>
</Window>
