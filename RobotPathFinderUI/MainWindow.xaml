        <Label x:Name="label_Copy" Content="SizeY" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="622,26,0,0" RenderTransformOrigin="1.69,0.783"/>
        <RadioButton x:Name="btnSetStart" Content="Set Start" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="585,143,0,0"/>
        <RadioButton x:Name="btnSetEnd" Content="Set End" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="585,164,0,0"/>
        <RadioButton x:Name="btnSetBlock" Content="Set Block" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="585,185,0,0"/>
        <Button x:Name="btnFindPath" Content="Find Path" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="638,206,0,0" Click="btnFindPath_Click"/>
